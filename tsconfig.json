{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2015",
    "outDir": "out",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "stripInternal": true,
    "traceResolution": false,
    "newLine": "LF",
    "jsx": "preserve",
    "rootDir": "src",
    "inlineSources": true,
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
